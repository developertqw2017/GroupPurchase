/* components/appointment/index.wxss */
.container {
    background-color: #F2f2f2;
}

view.text {
    display: flex;
    align-items: center;
    position: relative;
    padding: 10px 10px 10px 12px;
    font-size: 15px;
    color: #656565;
}

view.text:before {
    position: absolute;
    display: block;
    content: ' ';
    left: -5px;
    width: 2px;
    height: 100%;
    background-color: purple;
}

.line_flag {
    width: 3px;
    height: 18px;
    display: inline-block;
    background-color: purple;
}

view.text text {
    margin-left: 10px;
    line-height: 18px;
}

.item {
    padding: 0 10px 0 0;
    background-color: #fff;
    color: #787878;
    border-top: 1px solid #eaeaea;
    border-bottom: 1px solid #eaeaea;
    height: 150px;
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
}

.item image {
    display: block;
    width: 140px;
    height: 140px;
}

.item_middle {
    margin-left: 10px;
    padding-top: 0px;
    vertical-align:top;
    height: 60px;
    overflow: hidden;
}

.item_middle .title {
    font-size: 16px;
    color: #333;
}
.item_middle .sub_title {
    font-size: 14px;
    color: #666;
    margin: 2px 0px;
}

.item_middle .actor {
    font-size: 14px;
    color: #666;
    margin: 2px 0px;
}
.item_right{
    text-align:flex;
    width:100%;
    height: 90px;
}
.item_right .score {
    position: relative;
    bottom:0;
    font-size: 12px;
    color: #cf616a;
}

.item_right .action {
    border: 1px solid #29cc6d;
    border-radius: 2px;
    color: #29cc6d;
    display: inline-block;
    padding: 2px 4px;
    font-size: 18px;
    line-height: 16px;
    text-align: center;
}

.item_left {
    display: inline-block;
    padding: 2px 4px;
}
